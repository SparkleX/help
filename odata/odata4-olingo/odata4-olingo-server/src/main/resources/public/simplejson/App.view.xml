<mvc:View xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="help.App">
  <Panel headerText="{/panelHeaderText}" class="sapUiResponsiveMargin" width="auto">
    <content>
      <Label text="Id"/>
      <Input id="id1" value="{/Id}" valueLiveUpdate="true"/>
      <Label text="Item Code" />
      <Input id="id2" value="{/ItemCode}" valueLiveUpdate="true"/>

      <Label text="Item Name" />
      <Input id="id3" value="{/ItemName}" valueLiveUpdate="true"/>
      
      <Button text="Update" press="onUpdate" />
      <Button text="Delete" press="onDelete" /> 
	  
	  
    </content>
  </Panel>
</mvc:View>