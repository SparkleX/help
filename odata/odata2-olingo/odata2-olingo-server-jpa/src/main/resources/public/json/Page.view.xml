<mvc:View
	height="100%"
	controllerName="sap.m.sample.Select2Columns.Page"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page showHeader="false">
		<content>
			<Select
				showSecondaryValues= "true"
				items="{
					path: '/Cars',
					sorter: { path: 'Id' }
				}">
				<core:ListItem key="{Id}" text="{Model}" additionalText= "1"/>
			</Select>
		</content>
	</Page>
</mvc:View>
